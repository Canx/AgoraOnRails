<h1>Listing opinions</h1>

<table>
  <tr>
    <th>Value</th>
    <th>Organization</th>
    <th>Proposal</th>
    <th>Explanation</th>
    <th>Link</th>
  </tr>

<% @opinions.each do |opinion| %>
  <tr>
    <td><%=h opinion.value %></td>
    <td><%=h opinion.organization_id %></td>
    <td><%=h opinion.proposal_id %></td>
    <td><%=h opinion.explanation %></td>
    <td><%=h opinion.link %></td>
    <td><%= link_to 'Show', opinion %></td>
    <td><%= link_to 'Edit', edit_opinion_path(opinion) %></td>
    <td><%= link_to 'Destroy', opinion, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New opinion', new_opinion_path %>