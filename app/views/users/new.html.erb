<h2>Regístrate </h2>

<% form_for @user, :url => users_path do |f| %>
  <%= f.error_messages %>
  
  <fieldset id="login-section">
  
          <div class="overlayfield">
            <%= f.label :login, "<span>Introduce tu usuario</span>" %>
            <%= f.text_field :login %>
          </div>
  
          <div class="overlayfield">
            <%= f.label :password, "<span>Dinos tu contraseña</span>" %>
            <%= f.password_field :password %>
          </div>

          <div class="overlayfield">
            <%= f.label :password_confirmation, "<span>Repite tu contraseña</span>" %>
            <%= f.password_field :password_confirmation %>
          </div>
      
    </fieldset>
    
    <fieldset>
      
      <div class="overlayfield">
        <%= f.label :email, "<span>Y por último tu email</span>" %>
        <%= f.text_field :email %>
      </div>
      
    </fieldset>

    <p class="actions">
      <button type="submit" class="confirm"><span>Regístrate</span></button>
    </p>
<% end %>
