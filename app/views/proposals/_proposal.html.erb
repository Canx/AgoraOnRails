<article class="proposal">
  <section class="proposal-content">
    <header>
      <hgroup>
        <h2 class="title"><%= link_to awesome_truncate(proposal.title, 150), proposal %></h2>
        <h3>
          Presentado por: <%= link_to proposal.proposer.name, proposal.proposer, :class => "proposer" %>
          el <span class="proposed_at"><%= l proposal.proposed_at, :format => :long %></span>
        </h3>
      </hgroup>
    </header>
  </section>
    <% if proposal.closed? %>
    <section class="vote-results documents-list voters">
      <dl>
        <dt class="accessible"><strong>Resultados de la popular</strong></dt>
        <dd>
          <ul>
            <% Vote.choices.each do |choice| %>
              <li class="<%= choice %>">
                <strong style="width:<%= "#{ number_to_percentage(proposal.percentage_for(choice.to_sym)-40, :precision => 0) }" %>"><%= choice %></strong>
                <span><%= "#{ number_to_percentage(proposal.percentage_for(choice.to_sym), :precision => 0) }" %></span>
              </li>
            <% end %>
          </ul>
        </dd>
      </dl>
    </section>
    <% else %>
    <section class="voters">
      <%= link_to "<strong>Vota!</strong> #{proposal.votes.blank? ? 'Se el primero en votar' : 'otros NaN ya lo han hecho'}", proposal, :class => "vote-link" %>
    </section>
    <% end %>
  <span class="decorate up"></span>
</article>