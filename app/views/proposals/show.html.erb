<div class="proposal">
  
  <h2 class="title"><%=h @proposal.title %></h2>
  
  <p class="proposal_type">
    <%=h @proposal.proposal_type %>
  </p>
  
  <a class="official_url" href="<%= @proposal.official_url %>">Enlace oficial</a>
  
  <% if @proposal.closed? %>
    Propuesta Cerrada
  <% elsif current_user && current_user.has_voted_for?(@proposal) %>
    Ya has votado esta propuesta
  <% else %>  
    <% form_tag new_proposal_vote_path(@proposal), :method => :get do -%>
      <button type="submit" name="value" value="si">Sí</button>
      <button type="submit" name="value" value="no">No</button>
      <button type="submit" name="value" value="abstencion">Abstención</button>
    <% end -%>
  <% end %>
</div>


<%= link_to 'Edit', edit_proposal_path(@proposal) %> |
<%= link_to 'Back', proposals_path %>